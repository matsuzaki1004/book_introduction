<p id="notice"><%= notice %></p>

<h1>本の紹介</h1>

<table>
  <thead>
    <tr>
      <th>題名</th>
      <th>金額</th>
      <th>説明</th>
      <th>評価</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.description %></td>
        <td><%= book.rating %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

